<body style="background-color: powderblue;">
    <div class="topnav4">
		<a href='/user/homepage'>Home</a>
    <a href= "/groups/CreatedGroup">Back</a>
	</div>
    <div id="addrec2">
        
       <h3>Tell us who you want to kick out of the group</h3><br>
       <% if(errormessage && errormessage.length> 0) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Warning!</strong>
            <%=errormessage %>
                <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        <% } %>

     <form id="frm3" action="/groups/api/removeMember" method="post" >
        <label for="groupName">Enter the Members's Name: </label><br>
        <input type="text" required id="userName" name="userName" placeholder="User Name"><br><br>
        
        <!--Submited with the form-->
        <div class="reasonSelect">
            <label for="reason">Please tell us why you want to remove this member here</label>
            <select id="reason" name="reason" form="leave">
                <option value="You not active in the group">You not active in the group</option>
                <option value="You were invited by mistake">You were invited by mistake</option>
                <option value="You are disruptive in the group">You are disruptive in the group</option>
                <option value="No reason">No reason</option>
            </select><br><br>
        </div>
            
        <input  type="submit" value="submit">
      </form>
    </div>

</body>
   
</html>